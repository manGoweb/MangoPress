# .editorconfig file helps developers define and maintain
# consistent coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_style = tab
indent_size = 2

[*.neon]
indent_style = tab
indent_size = 2

[composer.lock]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[.htaccess]
indent_style = tab
indent_size = 2
